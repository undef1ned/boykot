{
	"name": "Бойкот сайтів Партії Регіонів",
	"version": "1.0.3",
	"minimum_chrome_version":	"17",
	"description": "Даний додаток блокує перегляд та попереджає користувача про відвідання сайту, який належить регіоналам чи їх наближеним особам",
	"homepage_url": "https://www.facebook.com/BoycotteInUkraine",
	"background": {
		"scripts": ["js/background.js"]
	},
	"permissions": ["http://*/*", "https://*/*", "webRequest", "webRequestBlocking"],
    "icons" : {
        "48": "images/icon48.png",
        "64": "images/icon64.png",
        "128": "images/icon128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "Бойкот Партії Регіонів"
    },

	"manifest_version": 2
}